<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chef.activities.ChefSCPaymentActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/chefSCPayment_Toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:titleTextAppearance="@style/CommonToolbarTitleTheme"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/chefSCPayment_Toolbar"
        android:layout_margin="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/chef_payment_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:text="@string/payment_Textview"
                        android:textColor="@color/theme_dark_color"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/chef_paymentAmount_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:background="@color/theme_dark_color"
                        android:gravity="left"
                        android:padding="4dp"
                        android:text="@string/paymentAmount_TextView"
                        android:textColor="@color/theme_light_color"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/chef_paymentHint_TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/paymentHint_TextView"
                    android:textColor="@color/theme_dark_color"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/companyBkash_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:text="@string/companyBkash_TextView"
                        android:textColor="@color/theme_dark_color"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/companyBkashNumber_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:background="@color/theme_dark_color"
                        android:gravity="left"
                        android:padding="4dp"
                        android:text="@string/companyBkashNumber"
                        android:textColor="@color/theme_light_color"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/companyBkashHint_TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/companyBkashHint_TextView"
                    android:textColor="@color/theme_dark_color"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/paymentProcess_TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginTop="56dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="56dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/paymentProcess_TextView"
                android:textColor="@color/theme_dark_color"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/chef_transactionCode_EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/rounded_edit_text"
                    android:drawableRight="@drawable/ic_action_payment"
                    android:ems="10"
                    android:hint="@string/transactionCode_hint"
                    android:importantForAutofill="no"
                    android:inputType="textPersonName"
                    android:padding="16dp"
                    android:textColor="@color/theme_dark_color" />

                <TextView
                    android:id="@+id/chef_transactionCodeHint_TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="@string/transactionCodeHint_Textview"
                    android:textColor="@color/theme_dark_color"
                    android:textSize="12sp" />
            </LinearLayout>

            <Button
                android:id="@+id/chef_confirmPayment_Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:onClick="confirmPaymentClick"
                android:text="@string/confirmPayment_ButtonLabel" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>